<configuration>
    <appender name="saidaPadrao" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <looger name="com.algaworks.banco.negocio" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="saidaPadrao" />
    </root>
</configuration>